client

tls-client
auth SHA256
cipher AES-256-CBC
remote-cert-tls server
{% if openvpn_use_modern_tls %}
tls-version-min 1.2
{% endif %}

proto {{openvpn_proto}}
remote {{inventory_hostname}} {{openvpn_port}}
dev tun

resolv-retry 5
nobind
keepalive 5 30
comp-lzo
persist-key
persist-tun
verb 3

route-method exe
route-delay 2
register-dns

key-direction 1

ca ca.crt
tls-auth ta.key
cert {{item}}.crt
key {{item}}.key

{% if openvpn_verify_cn %}
verify-x509-name OpenVPN-Server-{{inventory_hostname}} name
{% endif %}
